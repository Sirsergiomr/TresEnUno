<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090E33"
    tools:context=".FragmentCalculardora">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#1B2977"
        android:gravity="end"
        android:textColor="#00E5FF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="356dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:alwaysDrawnWithCache="false"
        android:background="#191D32"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonDel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="DEL"
                android:textColor="#00B0FF"
                app:backgroundTint="@android:color/transparent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:hapticFeedbackEnabled="false"
                android:isScrollContainer="false"
                android:shadowColor="#673AB7"
                android:text="7"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:shadowColor="#673AB7"
                android:text="8"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:shadowColor="#673AB7"
                android:text="9"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/button_sumar"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:shadowColor="#673AB7"
                android:text="+"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="4"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="5"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="6"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/button_restas"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="-"
                android:textColor="#00B0FF"
                android:textSize="30sp"
                app:backgroundTint="@android:color/transparent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="1"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="2"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="3"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/button_multi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="x"
                android:textColor="#00B0FF"
                android:textSize="12sp"
                app:backgroundTint="@android:color/transparent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_punto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="."
                android:textColor="#00B0FF"
                android:textSize="12sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/bt0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="0"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/button_resultado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="="
                android:textColor="#00B0FF"
                android:textSize="24sp"
                app:backgroundTint="@android:color/transparent" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordes"
                android:text="/"
                android:textColor="#00B0FF"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>